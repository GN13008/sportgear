<div class="banner-home">
  <div class="banner-content">
    <div class="content">
      <h1><%= t("welcome") %></h1>
      <h3><%= t("slogan") %></h3>
      <hr>
      <div class="sport-cards">
      <% @sports.each do |sport| %>
        <%= link_to sport_path(sport) do %>
          <div class="sport-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.25), rgba(0,0,0,0.1)), url(<%= sport.cover_url %>)">
            <%= sport.name %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
