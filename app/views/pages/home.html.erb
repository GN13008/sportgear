<div class="banner-home">
  <div class="banner-content">
    <div class="content">
      <h1>Welcome to Sport Gear</h1>
      <h3>You are New in the Kite World ? Find sport gear adapt to your level ðŸš€</h3>
      <div class="form-group mt-4">
        <%= form_with url: "/search", method: :get, class: "form-group" do |form| %>
          <div class="row justify-content-center mt-2">
            <div class="col-12 col-md-4">
              <%= form.label "Sport Level", "Sport Level", class: "form-control" %>
            </div>
            <div class="col-12 col-md-8">
              <%= form.select "sport_lvl", @sport_lvl, 
                { selected: "", prompt: 'Are you used to other board sports ?' }, 
                class: "form-control" %>
            </div>
          </div>
          <div class="row justify-content-center mt-2">
            <div class="col-12 col-md-4">
              <%= form.label "Weight", "Weight", class: "form-control" %>
            </div>
            <div class="col-12 col-md-8">
              <%= form.select "weights", @weights, 
                { selected: "", prompt: 'Enter your weights' }, 
                class: "form-control" %>
            </div>
          </div>
          <div class="row justify-content-center mt-2">
            <div class="col-12">
              <h3><%= form.submit "Find The best Gear", class: "btn btn-flat form-cntrol w-100" %></h3>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
