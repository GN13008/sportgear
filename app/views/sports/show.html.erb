<div class="banner-home">
  <div class="banner-content">
    <div class="content">
      <h1>Find the best <%= @sport.name %> gear</h1>
      <% if @sport.name == "Kitesurf" %>
        <h3>Tell us more about you and find the best gear !</h3>
        <div class="form-group mt-4">
          <%= form_with url: @path, method: :get, class: "form-group" do |form| %>
            <div class="row justify-content-center mt-2">
              <div class="col-12 col-md-6 mb-2">
                <%= form.select "weights", @weights, 
                  { selected: "", prompt: t("form.weights_question") }, 
                  class: "form-control form" %>
              </div>
              <div class="col-12 col-md-6">
                <%= form.select "sport_lvl", @sport_lvl, 
                  { selected: "", prompt: t("form.lvl_question") }, 
                  class: "form-control form" %>
              </div>       
            </div>
            <div class="row justify-content-center mt-2">
              <div class="col-12">
                <h3><%= form.submit t("form.call"), class: "btn btn-flat form-cntrol w-100" %></h3>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <h2 class="mt-4">We are working on this part of the app, subscribe to the newsletter to have some news about it very soon !</h2>
      <% end %>
    </div>
  </div>
</div>
